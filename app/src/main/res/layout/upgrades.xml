            android:text="Nothing selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textUpgradeInfo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="38dp" android:layout_marginTop="414dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textUpgradeCostAm" app:layout_constraintStart_toEndOf="@+id/textUpgradeCost"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/buttonBuyUpgrade"/>
